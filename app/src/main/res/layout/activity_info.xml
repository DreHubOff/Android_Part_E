<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/country_name_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="25sp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/country_capital_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="25sp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/country_region_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="25sp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/country_callingCodes_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="25sp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/country_population_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="25sp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/country_area_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="25sp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/country_currencies_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:textSize="25sp"
        android:layout_weight="1"/>

</LinearLayout>